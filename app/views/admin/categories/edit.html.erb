<h1 class="text-center my-4 text-primary">Edit Category</h1>

<div class="mb-4">
  <%= link_to 'Back to Categories', admin_categories_path, class: 'btn btn-secondary' %>
</div>

<div class="card shadow-sm p-4 border-primary">
  <%= form_with model: @category, url: admin_category_path(@category), local: true, class: "needs-validation" do |f| %>
    <!-- Category Name -->
    <div class="mb-3">
      <%= f.label :name, "Category Name", class: "form-label fw-bold" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category name" %>
    </div>

    <!-- Upload Image -->
    <div class="mb-3">
      <%= f.label :image, "Upload Image", class: "form-label fw-bold" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <!-- Current Image Display -->
    <% if @category.image.attached? %>
      <div class="mb-3">
        <p class="fw-bold mb-2">Current Image:</p>
        <%= image_tag rails_blob_path(@category.image, only_path: true), class: "img-thumbnail shadow-sm", style: "max-width: 150px; max-height: 150px;" %>
      </div>
    <% else %>
      <p class="text-danger">No image uploaded</p>
    <% end %>

    <!-- Submit Button -->
    <div class="text-end">
      <%= f.submit "Update Category", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
