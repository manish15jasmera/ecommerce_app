<h1>New Category</h1>

<div class="mb-3">
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary' %>
</div>

<%= form_with model: @category, url: admin_categories_path, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <br>
    <%= form.label :image, "Upload Image" %><br>
    <%= form.file_field :image %>
  </div>

  <div>
    <br>
    <%= form.submit "Create Category", class: "btn btn-primary" %>
  </div>
<% end %>
