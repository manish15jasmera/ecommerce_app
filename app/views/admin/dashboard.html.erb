<div class="container mt-4">
  <h1 class="text-center mb-4">Admin Dashboard</h1>

  <div class="alert alert-primary text-center">
    <p>Welcome, <strong><%= current_user.email %></strong>!</p>
  </div>

  <div class="text-end mb-3">
    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <!-- Manage Categories Section -->
    <div class="col">
      <div class="card shadow-sm border-primary">
        <div class="card-header text-center bg-primary text-white">
          <h4>Manage Categories</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "Create Category", new_admin_category_path, class: "btn btn-outline-primary me-2" %>
          <%= link_to "View Categories", admin_categories_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>

    <!-- Manage Products Section -->
    <div class="col">
      <div class="card shadow-sm border-success">
        <div class="card-header text-center bg-success text-white">
          <h4>Manage Products</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "Create Product", new_admin_product_path, class: "btn btn-outline-success me-2" %>
          <%= link_to "View Products", admin_products_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>

    <!-- Manage Orders Section -->
    <div class="col">
      <div class="card shadow-sm border-warning">
        <div class="card-header text-center bg-warning text-dark">
          <h4>Manage Orders</h4>
        </div>
        <div class="card-body text-center">
          <%= link_to "View All Orders", admin_orders_path, class: "btn btn-outline-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>
