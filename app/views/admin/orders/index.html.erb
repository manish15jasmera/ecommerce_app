<h1>Manage Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Order Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>#<%= order.id %></td>
        <td><%= order.user.email %></td>
        <td><%= number_to_currency(order.total_price) %></td>
        <td><%= order.order_status.name %></td>
        <td><%= order.created_at.strftime("%d %b %Y, %I:%M %p") %></td>
        <td>
          <%= link_to 'View Details', admin_order_path(order), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_admin_order_path(order), class: 'btn btn-warning btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary' %>

