<h1 class="text-center my-4 text-primary">New Product</h1>

<div class="mb-4">
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary' %>
</div>

<%= form_with model: @product, url: admin_products_path, local: true, class: "needs-validation" do |form| %>
  <!-- Product Name -->
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter product name", required: true %>
  </div>

  <!-- Product Description -->
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter product description", rows: 4, required: true %>
  </div>

  <!-- Product Price -->
  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control", step: 0.01, placeholder: "Enter product price", required: true %>
  </div>

  <!-- Product Stock -->
  <div class="mb-3">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-control", placeholder: "Enter stock quantity", required: true %>
  </div>

  <!-- Product Category -->
  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, class: "form-select", required: true %>
  </div>

  <!-- Product Images -->
  <div class="mb-3">
    <%= form.label :images, "Upload Images", class: "form-label" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
    <small class="form-text text-muted">You can upload multiple images.</small>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <%= form.submit "Create Product", class: "btn btn-primary px-4" %>
  </div>
<% end %>
