<h1>New Product</h1>

<div class="mb-3">
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary' %>
</div>

<%= form_with model: @product, url: admin_products_path, local: true, class: "needs-validation" do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :images, "Upload Images", class: "form-label" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
  </div>
<% end %>
