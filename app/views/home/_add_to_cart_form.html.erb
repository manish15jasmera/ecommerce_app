<%= form_with url: cart_items_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :product_id, value: product.id %> <!-- Hidden product id -->

  <div class="input-group">
    <%= f.number_field :quantity, min: 1, value: 1, class: "form-control form-control-sm", aria: { label: "Quantity" } %>
    <div class="input-group-append">
      <%= f.submit "Add to Cart", class: "btn btn-success btn-sm" %>
    </div>
  </div>
<% end %>
