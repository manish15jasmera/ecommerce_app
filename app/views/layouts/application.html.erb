<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcommerceApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom styles (if any) -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <style>
      /* Sticky Footer Styling */
      html, body {
        height: 100%;
      }
      body {
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
      }
    </style>
    
  </head>
  <body>
    <!-- Header Section -->
    <header class="bg-primary text-white py-3">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <!-- Branding -->
      <h1 class="h3 mb-0">EcommerceApp</h1>

      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <!-- Home Link -->
            <li class="nav-item">
              <%= link_to 'Home', root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Profile', profile_path, class: 'nav-link' %>
            </li>
            
            <% if user_signed_in? %>
              <!-- Dropdown Menu for Logged-In User -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= current_user.email %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                  <li><%= link_to 'Profile', "profile_path", class: 'dropdown-item' %></li>
                  <li><%= link_to 'Orders', "orders_path", class: 'dropdown-item' %></li>
                  <li><%= link_to 'Cart', "cart_path", class: 'dropdown-item' %></li>
                  <li>
                    <%= link_to 'Logout', destroy_user_session_path, 
                        class: 'dropdown-item', 
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to log out?' } %>
                  </li>
                </ul>
              </li>

              <!-- Cart Icon with Placeholder for Item Count -->
              <li class="nav-item">
                <%= link_to cart_path, class: 'nav-link' do %>
                <i class="fas fa-shopping-cart"></i>
                <!-- Display the number of items in the cart -->
                <span class="badge bg-warning text-dark ms-2">
                <%= cart_item_count || 0 %>
                </span>
              <% end %>
</li>

            <% else %>
              <!-- Login Button for Guests -->
              <li class="nav-item">
                <%= link_to 'Login', new_user_session_path, class: 'btn btn-success' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>

    <!-- Main Content -->
    <main class="container my-4">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>

    <!-- Footer Section -->
    <footer class="bg-dark text-white text-center py-4">
      <div class="container">
        <p>&copy; <%= Time.now.year %> EcommerceApp. All rights reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript (if any) -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </body>
</html>
