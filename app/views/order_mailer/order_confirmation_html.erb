<!-- app/views/order_mailer/order_confirmation.html.erb -->
<h1>Thank you for your order, <%= @customer.email %>!</h1>
<p>Your order has been successfully placed. Below are the details:</p>

<ul>
  <% @order_items.each do |item| %>
    <li><%= item.product.name %> - Quantity: <%= item.quantity %> - Price: $<%= item.price %></li>
  <% end %>
</ul>

<p><strong>Total Price: $<%= @order.total_price %></strong></p>
<p>We will notify you once your order is shipped.</p>
