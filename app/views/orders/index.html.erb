<h1 class="text-center my-4 text-primary">Your Orders</h1>

<div class="container">
  <% if @orders.any? %>
    <% @orders.each do |order| %>
      <div class="card shadow-sm mb-4 border-primary">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">Order #<%= order.id %></h3>
            <%= link_to 'View Order', order_path(order), class: 'btn btn-primary btn-sm' %>
          </div>
          <hr>
          <p><strong>Status:</strong> <%= order.order_status.name %></p>
          <p><strong>Total Price:</strong> <%= number_to_currency(order.total_price) %></p>
          <p><strong>Placed On:</strong> <%= order.created_at.strftime("%d %b %Y, %I:%M %p") %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info text-center" role="alert">
      You have no orders yet.
    </div>
  <% end %>
</div>
