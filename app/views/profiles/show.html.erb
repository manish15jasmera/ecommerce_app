<div class="container mt-5">
  <h1 class="text-center mb-4">Profile</h1>

  <div class="row g-4">
    <!-- Profile Information -->
    <div class="col-md-6">
      <div class="card shadow-sm border-primary">
        <div class="card-header text-white bg-primary text-center">
          <h5 class="mb-0">User Information</h5>
        </div>
        <div class="card-body">
          <p><strong>Email:</strong> <%= current_user.email %></p>
          <p><strong>Name:</strong> <%= @profile.name.presence || "Not provided" %></p>
          <p><strong>Phone:</strong> <%= @profile.phone.presence || "Not provided" %></p>
        </div>
      </div>
    </div>

    <!-- Shipping Address -->
    <div class="col-md-6">
      <div class="card shadow-sm border-success">
        <div class="card-header text-white bg-success text-center">
          <h5 class="mb-0">Shipping Address</h5>
        </div>
        <div class="card-body">
          <% if @shipping_address.persisted? %>
            <p><strong>Street:</strong> <%= @shipping_address.street %></p>
            <p><strong>City:</strong> <%= @shipping_address.city %></p>
            <p><strong>State:</strong> <%= @shipping_address.state %></p>
            <p><strong>Postal Code:</strong> <%= @shipping_address.postal_code %></p>
            <p><strong>Country:</strong> <%= @shipping_address.country %></p>
          <% else %>
            <p class="text-danger">No shipping address added yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-center mt-5">
    <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary btn-lg me-3' %>
    <%= link_to 'Home', root_path, class: 'btn btn-secondary btn-lg' %>
  </div>
</div>
