<div class="container mt-4">
  <h1 class="text-center mb-4">Profile</h1>

  <div class="row">
    <!-- Profile Information -->
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center">User Information</h3>
          <p><strong>Email:</strong> <%= current_user.email %></p>
          <p><strong>Name:</strong> <%= @profile.name.presence || "Not provided" %></p>
          <p><strong>Phone:</strong> <%= @profile.phone.presence || "Not provided" %></p>
        </div>
      </div>
    </div>

    <!-- Shipping Address -->
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center">Shipping Address</h3>
          <% if @shipping_address.persisted? %>
            <p><strong>Street:</strong> <%= @shipping_address.street %></p>
            <p><strong>City:</strong> <%= @shipping_address.city %></p>
            <p><strong>State:</strong> <%= @shipping_address.state %></p>
            <p><strong>Postal Code:</strong> <%= @shipping_address.postal_code %></p>
            <p><strong>Country:</strong> <%= @shipping_address.country %></p>
          <% else %>
            <p>No shipping address added yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary me-2' %>
    <%= link_to 'Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
